<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        
   <Button android:id="@+id/hello_moon_playVideo_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/hello_moon_play"/>
   <Button android:id="@+id/hello_moon_pauseVideo_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/hello_moon_pause"/>
   <Button android:id="@+id/hello_moon_stopVideo_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/hello_moon_stop"/>    
    </LinearLayout>
       
   <SurfaceView android:id="@+id/hello_moon_surfaceView"
       android:layout_width="match_parent"
       android:layout_height="320dip"/>

</LinearLayout>
